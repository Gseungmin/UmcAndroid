<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".ui.SaveFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#2F2F2F"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="제목을 입력하세요"
            android:lines="1"
            android:textStyle="bold"></EditText>

        <TextView
            android:id="@+id/notesBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#2F2F2F"
            android:gravity="center"
            android:text="Notes"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="내용을 입력하세요"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="10"
            android:scrollbars="vertical"></EditText>

        <TextView
            android:id="@+id/date"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="#CDC0DC"
            android:text="날짜를 선택해주세요"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/saveBtn"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#B1B7C7"
        android:gravity="center"
        android:text="save"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/backBtn"></TextView>

    <TextView
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="back"
        android:background="#BDACAC"
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>